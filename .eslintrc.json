{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			"tab",
			{ "SwitchCase": 1, "MemberExpression": "off" }
		],
		"linebreak-style": [
			"off",
			"windows"
		],
		"quotes": [
			"error",
			"single",
			{ "avoidEscape": true, "allowTemplateLiterals": true }
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": 1,
		"no-unused-vars": 1
	},
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"impliedStrict": true
	}
}