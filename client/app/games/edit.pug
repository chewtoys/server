include ../template/_mixins

.row.row--fullheight(ng-controller="AdminGameEditCtrl")
	.col-sm-9.col--main
		h1.h--primary Edit Game
		hr

		form(role="form")

			//- form for original games
			//-----------------------------------------------------------------
			.form-horizontal

				//- NAME
				.form-group(ng-class="{ error: errors.title }")
					label.col-sm-3.control-label(for="title") Title
					.col-sm-9
						input#title.form-control(type="text", ng-model="game.title", placeholder="Full title of the game")
				.alert.alert-danger.alert--shifted-up-2x(ng-show="errors.title")
					.row: .col-sm-9.col-sm-offset-3
						+icon('warning').shift-up.space-right
						| {{ errors.title }}

				//- manufacturer / year
				.form-group
					label.col-sm-3.control-label(for='manufacturer', ng-class="{ error: errors.manufacturer }") Manufacturer
					.col-sm-6
						input#manufacturer.form-control(type="text", ng-model="game.manufacturer", placeholder="Manufacturer name", ng-class="{ error: errors.manufacturer }")
					label.col-sm-1.control-label.text-right(for='year', ng-class="{ error: errors.year }") Year
					.col-sm-2.form-subgroup
						input#year.form-control(type="text", ng-model="game.year", ng-class="{ error: errors.year }")
				.alert.alert-danger.alert--shifted-up(ng-show="errors.manufacturer")
					.row: .col-sm-9.col-sm-offset-3
						+icon('warning').shift-up.space-right
						| {{ errors.manufacturer }}
				.alert.alert-danger.alert--shifted-up(ng-show="errors.year")
					.row: .col-sm-9.col-sm-offset-3
						+icon('warning').shift-up.space-right
						| {{ errors.year }}

				//- game type
				.form-group(ng-class="{ error: errors.game_type }", ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label(for="title") Game Type
					.col-sm-5.col-md-4.col-lg-3
						select.form-control(ng-options="item.value as item.name for item in gameTypes", ng-model="game.game_type")
				.alert.alert-danger.alert--shifted-up-2x(ng-show="errors.game_type")
					.row: .col-sm-9.col-sm-offset-3
						+icon('warning').shift-up.space-right
						| {{ errors.game_type }}

				//- mpu
				.form-group(ng-class="{ error: errors.game_type }", ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label(for="title") MPU
					.col-sm-9.col-md-6
						select.form-control(ng-options="item.id as item.long for item in systems", ng-model="game.ipdb.mpu")
				.alert.alert-danger.alert--shifted-up-2x(ng-show="errors['ipdb.mpu']")
					.row: .col-sm-9.col-sm-offset-3
						+icon('warning').shift-up.space-right
						| {{ errors['ipdb.mpu'] }}

				//- model_number / produced_units
				.form-group(ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label(for='produced_units', ng-class="{ error: errors.produced_units }") Produced Units
					.col-sm-2
						input#produced_units.form-control(type="text", ng-model="game.produced_units", ng-class="{ error: errors.produced_units }")
					label.col-sm-2.control-label.text-right(for='year', ng-class="{ error: errors.year }") Model#
					.col-sm-3.form-subgroup
						input#model_number.form-control(type="text", ng-model="game.model_number", ng-class="{ error: errors.model_number }")
				.alert.alert-danger.alert--shifted-up(ng-show="errors.produced_units")
					.row: .col-sm-9.col-sm-offset-3
						+icon('warning').shift-up.space-right
						| {{ errors.produced_units }}
				.alert.alert-danger.alert--shifted-up(ng-show="errors.model_number")
					.row: .col-sm-9.col-sm-offset-3
						+icon('warning').shift-up.space-right
						| {{ errors.model_number }}

				//- keywords
				.form-group(ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label Keywords
					.col-sm-9
						textarea.textarea--full(placeholder="Keywords", ng-model="arrays.keywords")

				//- description
				.form-group(ng-show="game.game_type === 'og'")
					label.col-sm-3.control-label Description
					.col-sm-9
						editor.tabset--light(ng-model="game.description", placeholder="Description of the original table", markdown-text="Markdown enabled.")

				//- instructions
				.form-group(ng-show="game.game_type === 'og'")
					label.col-sm-3.control-label Instructions
					.col-sm-9
						editor.tabset--light(ng-model="game.instructions", placeholder="Put game instructions here", markdown-text="Markdown enabled.")

				//- features
				.form-group(ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label Features
					.col-sm-9
						editor.tabset--light(ng-model="game.features", placeholder="Features such as flippers, bumpers, slingshots, ramps, etc.", markdown-text="Markdown enabled.")

				//- notes
				.form-group(ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label Notes
					.col-sm-9
						editor.tabset--light(ng-model="game.notes", placeholder="Special notes about the game", markdown-text="Markdown enabled.")

				//- toys
				.form-group(ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label Toys
					.col-sm-9
						editor.tabset--light(ng-model="game.toys", placeholder="Other noteable objects that aren't listed under features", markdown-text="Markdown enabled.")

				//- slogans
				.form-group(ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label Slogans
					.col-sm-9
						editor.tabset--light(ng-model="game.slogans", placeholder="Usually printed on the flyer", markdown-text="Markdown enabled.")

				//- artists
				.form-group(ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label Artists
					.col-sm-9
						textarea.textarea--full(placeholder="Authors of the original artwork", ng-model="arrays.artists")

				//- designers
				.form-group(ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label Designers
					.col-sm-9
						textarea.textarea--full(placeholder="Game designers", ng-model="arrays.designers")

				//- themes
				.form-group(ng-hide="game.game_type === 'og'")
					label.col-sm-3.control-label Themes
					.col-sm-9
						textarea.textarea--full(placeholder="Game themes", ng-model="arrays.themes")

			.clearfix

			//-----------------------------------------------------------------
			h1 Media
			hr

			//- backglass
			.row.padder-top
				.col-sm-6
					.panel.panel--blank(
						file-upload="{ type: 'backglass', key: 'backglass', status: game.mediaFile, onSuccess: onBackglassUpload, onClear: onMediaClear, allowedExtensions: ['jpg', 'png'], allowMultipleFiles: false }"
						ngf-drag-over-class="'panel--dragging'"
					)
						.panel-body.a.a--darker
							.img.img--ar-bg.loaded(img-bg="game.mediaFile.backglass.variations['medium-2x']")
								.text-center.vertical-center--100
									uib-progressbar.progress--fixed-absolute.progress-striped.active(
										value="game.mediaFile.backglass.progress", ng-show="game.mediaFile.backglass.uploading"
									)
									.span(ng-show="!img.url")
										+icon('photo').svg-4x(ng-class="{ transparent: game.mediaFile.backglass.uploading }")
										p {{ mediaFile.backglass.uploadText }}
									.span(ng-show="img.loading")
										+icon('gear').svg-3x.svg-spin--slow
										p Generating thumbnails...

				.col-sm-6
					h4.h--large.h--no-margin Backglass
					i A few guidelines:
					ul
						li The aspect ratio should be <code>5:4</code> (or <code>1:1.25</code>)
						li Recommended resolution is <i>1280&times;1024</i>.
						li The DMD area should be cut off.
						li The image must not be stretched or upscaled.

					// info boxes
					.alert.alert-success.alert--inverted.alert--shifted-up.padder-top(ng-show="backglass.test == 'optimal'")
						+icon('check-circle').shift-up.space-right
						| Dimensions are {{ backglass.dimensions }}, which is optimal.
					.alert.alert-warning.alert--inverted.alert--shifted-up.padder-top(ng-show="backglass.test == 'warning'")
						+icon('warning').shift-up.space-right
						| Dimensions are {{ backglass.dimensions }}, where the aspect ratio is <code>1:{{ backglass.ar }}</code> and {{ backglass.arDiff }}% off the ideal <code>1:1.25</code>. Some content will be cropped off.
					.alert.alert-danger.alert--inverted.alert--shifted-up.padder-top(ng-show="backglass.test == 'error'")
						+icon('warning').shift-up.space-right
						| Dimensions are {{ backglass.dimensions }}, where the aspect ratio is <code>1:{{ backglass.ar }}</code> and <strong>{{ backglass.arDiff }}%</strong> off the ideal <code>1:1.25</code>. Please crop the image and try again.

			.alert.alert-danger.alert--shifted-up(ng-show="errors._backglass")
				+icon('warning').shift-up.space-right
				| {{ errors._backglass }}

			//- logo
			.row.padder-top
				.col-sm-6
					.panel.panel--blank(
						file-upload="{ type: 'logo', key: 'logo', status: game.mediaFile, onSuccess: onLogoUpload, onClear: onMediaClear, allowedExtensions: ['jpg', 'png'], allowMultipleFiles: false }"
						ngf-drag-over-class="'panel--dragging'"
					)
						.panel-body.a.a--darker
							.img.img--ar-logo.img--fit.loaded(img-bg="game.mediaFile.logo.variations['medium-2x']")
								.text-center.vertical-center--100
									uib-progressbar.progress--fixed-absolute.progress-striped.active(
										value="game.mediaFile.logo.progress", ng-show="game.mediaFile.logo.uploading"
									)
									.span(ng-show="!img.url")
										+icon('photo').svg-4x(ng-class="{ transparent: game.mediaFile.logo.uploading }")
										p {{ mediaFile.logo.uploadText }}
									.span(ng-show="img.loading")
										+icon('gear').svg-3x.svg-spin--slow
										p Generating thumbnails...
				.col-sm-6
					h4.h--large.h--no-margin Logo
					ul
						li Use the PNG format
						li Background should be transparent
						li There should be enough contrast on white as well as on black background.

			hr
			button.btn.btn-default.btn-lg(ng-click="reset(originalGame)") Reset
			button.btn.btn-primary.btn-lg.pull-right(ng-click="submit()") Update Game

			.content-end

	.col-sm-3.col--menu
		p &nbsp;
