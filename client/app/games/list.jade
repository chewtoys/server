include ../template/_mixins

.row.row--fullheight(ng-controller="GameListController")
	.col-sm-9.col--main
		h1.h--primary Games
		ul.nav-icons
			li(ng-class="{ active: viewtype == 'compact' }")
				i.fa.fa-th-large(ng-click="switchview('compact')")
			li(ng-class="{ active: viewtype == 'extended' }")
				i.fa.fa-th-list(ng-click="switchview('extended')")
			li(ng-class="{ active: viewtype == 'list' }")
				i.icon.icon-th-list-list(ng-click="switchview('list')")
		hr

		+icon('search')

		.pull-left(ng-show="games.length > 0")
			span.small {{ pagination.count }} GAMES
		.pull-right(ng-show="games.length > 0")
			i.a.a--lighter.fa.fa-angle-left.space-left-2x(ng-show="pagination.links.first", ng-click="paginate(pagination.links.first)")
			i.a.a--lighter.fa.fa-angle-left.space-left-2x(ng-show="pagination.links.prev", ng-click="paginate(pagination.links.prev)")
			span.small.space-left-2x PAGE &nbsp; {{ pagination.page }} / {{ Math.ceil(pagination.count / pagination.size) }}
			i.a.a--lighter.fa.fa-angle-right.space-left-2x(ng-show="pagination.links.next", ng-click="paginate(pagination.links.next)")
			i.a.a--lighter.fa.fa-angle-right.space-left-2x(ng-show="pagination.links.last", ng-click="paginate(pagination.links.last)")

		.clearfix.padder-bottom(ng-show="games.length > 0")
		p(ng-show="!games.length") No games found.
		.row.row-data.ng-cloak
			.fade2-animation(ng-include="template")

	.col-sm-3.col--menu
		h1 Filter
		hr

		// search box
		.input-group.padder-bottom
			span.input-group-addon.input-group-addon--search
				i.fa.fa-search
			input.form-control.input--search(ng-model="q", type="text", placeholder="Search")

		accordion.panel-group--transparent(close-others="false")

			// year filter
			accordion-group.panel--inner(is-open="filterYearOpen")
				accordion-heading by Year
				.row
					.col-xs-6.text-center.a(filter-decade="1960") 1960s
					.col-xs-6.text-center.a(filter-decade="1970") 1970s
					.col-xs-6.text-center.a(filter-decade="1980") 1980s
					.col-xs-6.text-center.a(filter-decade="1990") 1990s
					.col-xs-6.text-center.a(filter-decade="2000") 2000s
					.col-xs-6.text-center.a(filter-decade="2010") 2010s

			// manufacturer filter
			accordion-group.panel--inner(is-open="filterManufacturerOpen")
				accordion-heading by Manufacturer
				.row
					.col-xs-6.text-center.a(filter-manufacturer="Bally") Bally
					.col-xs-6.text-center.a(filter-manufacturer="Capcom") Capcom
					.col-xs-6.text-center.a(filter-manufacturer="Stern") Stern
					.col-xs-6.text-center.a(filter-manufacturer="Williams") Williams
					.col-xs-6.text-center.a(filter-manufacturer="Gottlieb") Gottlieb
					.col-xs-6.text-center.a(filter-manufacturer="Data East") Data East

		h1 Sort
		hr
		ul.list--sort-options
			li.a.selected.asc(sort="title", d="asc") Name
			li.a(sort="created_at", d="desc") Date Added
			li.a(sort="year", d="asc") Year

		span(ng-show="auth.hasPermission('games/add')")
			h1 Content
			hr
			a.btn.btn-primary(href="/games/add").padder-bottom
				i.fa.fa-plus-circle.space-right
				| Add Game