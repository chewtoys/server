include ../template/_mixins

p.padder-top(ng-show="pageLoading")
	+icon('circle-o-notch').small.svg-spin.space-right.shift-up
	| Loading...

.row.ng-cloak.row--fullheight.fade-animation(ng-controller="ReleaseDetailsController", ng-show="!pageLoading")

	//-- RIGHT COLUMN
	//-====================================================================
	.col-sm-4.col-md-3.col-sm-push-8.col-md-push-9.col--menu(ng-show="found")

		a.a--block.text-center(ui-sref="gameDetails({id: game.id})")
			img.img--logo(ng-src="{{ game.logo.variations['medium' + pixelDensitySuffix].url }}").padder-bottom

		//-- PLAYFIELD SHOTS
		//---------------------------------------------------------------------
		uib-carousel.padder-horizontal(interval="60000")
			uib-slide(ng-repeat="slide in shots", active="slide.active")
				a.image(href="{{ slide.full }}")
					img(ng-src="{{ slide.url }}")

		//-- RELEASE RATING
		//---------------------------------------------------------------------
		p.padder-bottom(ng-show="shots.length > 1") &nbsp;
		.text-center
			.ratingbox.padder-top(
				rating-avg="release.rating.average",
				rating-votes="release.rating.votes",
				rating-user="releaseRating"
				rating-action="rateRelease($rating)",
				rating-readonly="!auth.hasPermission('releases/rate')")

		//-- DOWNLOAD BUTTON
		//---------------------------------------------------------------------
		.text-center: button.btn.btn-primary.padder-top.padder-bottom.text-center(ng-click="download(game)")
			+icon('download-circle').space-right.hidden-sm.hidden-md
			| Download


		//-- STATS
		//---------------------------------------------------------------------
		hr
		.padder-horizontal-3x
			p
				.a.pull-right(
					uib-tooltip="{{ release.starred ? 'Unstar' : 'Star' }} this release",
					tooltip-placement="right",
					tooltip-append-to-body="true",
					ng-show="auth.hasPermission('releases/star')",
					ng-class="{ 'a--primary': release.starred }"
				)
					+icon('star')(ng-click="toggleReleaseStar(release)").shift-up-2x
				+icon('star-circle').svg-2x.shift-up-2x.space-right
				| {{ release.counter.stars | number }} star{{ release.counter.stars != 1 ? 's' : '' }}
			p.oneliner
				+icon('comment-circle').svg-2x.shift-up-2x.space-right
				| {{ release.counter.comments | number }} comment{{ release.counter.downloads != 1 ? 's' : '' }}
			p.oneliner
				+icon('download-circle').svg-2x.shift-up-2x.space-right
				| {{ release.counter.downloads | number }} download{{ release.counter.downloads != 1 ? 's' : '' }}
			p.oneliner
				+icon('eye-circle').svg-2x.shift-up-2x.space-right
				| {{ release.counter.views | number }} view{{ release.counter.views != 1 ? 's' : '' }}

		//-- AUTHOR ZONE
		//---------------------------------------------------------------------
		.panel--rect-block.padder-top(ng-show="(auth.hasPermission('releases/update-own') && auth.isAuthor(release)) || auth.hasPermission('releases/update')")
			h1.text-center
				+icon('gear').space-right
				| {{zoneName}} Zone

			.center
				ul.ul--no-list
					li: a.text-center(ui-sref="addReleaseVersion({ id: game.id, releaseId: release.id })")
						+icon('plus-circle').space-right.shift-up
						| Upload File
					li: a.text-center(ui-sref="editRelease({ id: game.id, releaseId: release.id })")
						+icon('pencil-circle').space-right.shift-up
						| Edit Release
					li(ng-hide="release.moderation && !release.moderation.is_approved")
						input#showModeration.checkbox--toggle(type='checkbox', ng-model="showModeration")
						label(for="showModeration")
						label.a.a--light(for="showModeration") Show Moderation

			p.padder-top


	//-- LEFT COLUMN (main content)
	//-====================================================================
	.col-sm-8.col-md-9.col-sm-pull-4.col-md-pull-3.col--main(ng-show="found")

		.alert.alert-danger.no-space-top(ng-show="game.restrictions.release.mpu")
			+icon('warning').shift-up.space-right
			| This is a {{ game.mpu.short }} game. We allow uploads of restricted games but as the author you are the only one who can access this release.

		//-- MODERATION ZONE
		//---------------------------------------------------------------------
		.panel--rect-block.padder-top.shift-up-1px(ng-show="showModeration")
			h1.text-center(uib-tooltip="Only visible by moderators and the uploader. Will disappear when the release is approved.", tooltip-placement="bottom", tooltip-append-to-body="true", tooltip-popup-delay="200")
				+icon('forum').space-right
				| Moderation Zone

			.padder-2x
				label(ng-show="!moderationComments || moderationComments.length == 0") No comments yet.
				.media.media--no-margin.collapse-in-animation(ng-repeat="comment in moderationComments track by comment.id")
					.collapse-in-animation-inner
						.media-left.avatar
							img.img-avatar.pull-left(gravatar-src="comment.from.gravatar_id", gravatar-default="retro", fallback-icon="user")
						.media-body.media--full-width
							.panel.panel--inner
								.panel-triangle
								.panel-heading
									label
									strong {{ comment.from.name }}
									| &nbsp;commented&nbsp;
									span(am-time-ago="comment.created_at")
								.panel-body
									div.markdown(markdown="comment.message")

				editor(ng-model="newModerationComment", user="auth.user", placeholder="Comment about release moderation", markdown-text="Comments are parsed with Markdown.")

				button.btn.btn-hollow.pull-right.shift-up-2x(ng-click="addModerationComment(release.id)") Reply
				.clearfix

			.alert.alert-info(ng-show="!release.moderation.is_refused && !release.moderation.is_approved")
				.text-center
					+icon('warning').shift-up.space-right
					| Release moderation is still pending.

			.alert.alert-success(ng-show="!release.moderation.is_refused && release.moderation.is_approved")
				.text-center
					+icon('info').space-right
					| This release has been {{ release.moderation.auto_approved ? 'auto-approved' : 'approved' }}.

			.alert.alert-danger(ng-show="release.moderation.is_refused")
				.text-center
					+icon('warning').shift-up.space-right
					| This release has not been approved for publication.

		.title.padder-top
			h1.title-main.h--primary(property="v:itemreviewed")
				a.a--primary(ui-sref="gameDetails({id: game.id})") {{ game.title }}
				| &nbsp;&middot; {{ release.name }} {{ latestVersion.version }}
			h1.title-sub
				.badge.badge--tag.badge--small.shift-down(ng-repeat="tag in release.tags", uib-tooltip="{{tag.description}}", tooltip-append-to-body="true") {{ tag.name }}
		hr

		div.markdown(markdown="release.description", ng-show="release.description")

		//-- AUTHORS
		//---------------------------------------------------------------------
		h3.h--smaller.h--primary Authors
		.media.col-sm-6.col-md-4(ng-repeat="author in release.authors")
			.media-left.media-middle
				img.img-avatar.img-avatar--sm(gravatar-src="author.user.gravatar_id", gravatar-default="retro", fallback-icon="user")
			.media-body
				user {{ author.user.name }}
				br
				| {{ author.roles.join(', ') }}
		.clearfix


		//-- ACKNOWLEDGEMENTS
		//---------------------------------------------------------------------
		h3.h--smaller.h--primary(ng-show="release.acknowledgements") Acknowledgements
		div.markdown(markdown="release.acknowledgements", ng-show="release.acknowledgements")

		//-- MOD PERMISSION
		//---------------------------------------------------------------------
		h3.h--smaller.h--primary Mod Permissions
		div {{ modPermission }}


		//-- VERSION HISTORY
		//---------------------------------------------------------------------
		h3.h--smaller.h--primary Version History
		uib-accordion.panel-group--transparent.subtle(close-others="false")
			uib-accordion-group(ng-repeat="version in releaseVersions", is-open="$first")
				uib-accordion-heading
					strong.space-left-2x v{{ version.version }}
					|  (
					span(am-time-ago="version.released_at")
					| )
					+icon('angle-down').smaller.shift-down.pull-right

				div.markdown.space-left-2x(markdown="version.changes")

		//-- LINKS
		//---------------------------------------------------------------------
		h3.h--smaller.h--primary(ng-show="release.links && release.links.length") Links
		a(ng-repeat="link in release.links", ng-href="{{ link.url }}", target="_blank") {{ link.label }} <br>

		//-- FLAVORS
		//---------------------------------------------------------------------
		h1.h--small
			| Available Flavors
			.pull-right
				input#showFilenames.checkbox--toggle(type='checkbox', ng-model="storage.showFilenames")
				label.shift-down(for="showFilenames")
				label.a.a--light.font-content(for="showFilenames") Show file names
		hr
		table.table.table-striped
			thead
				tr
					th(width="25px")
					th
					th(ng-show="!storage.showFilenames") Orientation
					th.hidden-xs.hidden-sm(ng-show="!storage.showFilenames") Lighting
					th(ng-show="!storage.showFilenames") Compatibility
					th(ng-show="storage.showFilenames") File Name
					th(ng-show="storage.showFilenames") Version
					th Size
			tbody
				tr(ng-repeat="flavor in flavorGrid")
					td.validation-badge(ng-class='flavor.file.validation | validationStatus')
						a(ng-click="validateFile(release, flavor.version.version, flavor.file)", uib-tooltip="{{ flavor.file.validation | validationTooltip }}", tooltip-placement="right", tooltip-append-to-body="true", tooltip-popup-delay="500")
							+icon('{{ "medal-" + (flavor.file.validation | validationStatus) }}')
					td.td--img
						img.img--rounded(ng-src="{{ flavor.file.playfield_image.variations['square' + pixelDensitySuffix].url }}")
					td(ng-show="!storage.showFilenames")
						| {{ flavor.orientation.name }} <br>
						i {{ flavor.orientation.other }}
					td.hidden-xs.hidden-sm(ng-show="!storage.showFilenames")
						| {{ flavor.lighting.name }} <br>
						i {{ flavor.lighting.other }}
					td(ng-show="!storage.showFilenames")
						span(ng-repeat="compat in flavor.file.compatibility") {{ compat.label }}
					td(ng-show="storage.showFilenames") {{ flavor.file.file.name }}
					td(ng-show="storage.showFilenames") {{ flavor.version.version }}
					td {{ flavor.file.file.bytes | bytes }}

		h1.h--small Comments
		hr

		//-- EXISTING COMMENTS
		//---------------------------------------------------------------------
		label(ng-show="!comments || comments.length == 0") No comments yet.
		.media.media--no-margin.collapse-in-animation(ng-repeat="comment in comments track by comment.id", ng-controller="CommentCtrl", ng-init="show=true")
			.collapse-in-animation-inner
				.media-left.avatar
					img.img-avatar.pull-left(gravatar-src="comment.from.gravatar_id", gravatar-default="retro", fallback-icon="user")
				.media-body.media--full-width
					.panel.panel--inner
						.panel-triangle
						.panel-heading
							label
							strong {{ comment.from.name }}
							| &nbsp;commented&nbsp;
							span(am-time-ago="comment.created_at")
						.panel-body
							div.markdown(markdown="comment.message")

		//-- NEW COMMENT
		//---------------------------------------------------------------------
		div(ng-show="auth.hasPermission('comments/add')")
			h3.h--smaller.h--primary() Add a Comment:
			editor(ng-model="newComment", user="auth.user", placeholder="Your comment", markdown-text="Comments are parsed with Markdown.")
			button.btn.btn-default.padder-top.pull-right(ng-click="addComment(release.id)") Comment

		.clearfix
		p.padder-bottom-2x

	.padder-top.space-left-2x(ng-show="!found && !pageLoading")
		p Sorry, no such release found.
		p(ng-show="!auth.isAuthenticated") If you're looking for a moderated release, try logging in.

	jsonld(json="ldRelease")
script(id="template/carousel/carousel.html", type="text/ng-template")
	.carousel(ng-mouseenter="pause()", ng-mouseleave="play()", ng-swipe-right="prev()", ng-swipe-left="next()")
		ol.carousel-indicators(ng-show="slides.length > 1")
			li(ng-repeat="slide in slides track by $index", ng-class="{active: isActive(slide)}", ng-click="select(slide)")
		.carousel-inner(ng-transclude="")
		a.left.carousel-control(ng-click="prev()", ng-show="slides.length > 1")
			+icon('angle-left')
		a.right.carousel-control(ng-click="next()", ng-show="slides.length > 1")
			+icon('angle-right')