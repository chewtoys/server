font-header = langdon
font-content = 'Raleway', sans-serif

border-radius-small = 2px
border-radius-large = 8px

font-weight-thin = 100
_font-weight-extralight = 200
_font-weight-light = 300
font-weight-normal = 400
_font-weight-medium = 500
_font-weight-semibold = 600
font-weight-bold = 700
_font-weight-extrabold = 800
_font-weight-ultrabold = 900

animation-long = 350ms
animation-short = 200ms
animation-shorter = 100ms

panel-sidebar-width = 175px
list-sidebar-width = 170px

// fix the box model (http://www.paulirish.com/2012/box-sizing-border-box-ftw/)
*, *:before, *:after
	box-sizing border-box


// background
body
	font-family font-content
	font-weight font-weight-normal
	font-size 16px
	-webkit-font-smoothing antialiased

.container.container-topmost
	padding-top 50px
	margin-bottom 30px
	border-bottom-right-radius border-radius-large
	border-bottom-left-radius border-radius-large

.col-main
	padding-left 30px
	padding-right 30px
.col-menu
	padding-bottom 25px

.row-fullheight
	overflow hidden
	border-bottom-right-radius border-radius-large
	border-bottom-left-radius border-radius-large
	> div
		margin-bottom -99999px
		padding-bottom 99999px
.row-data
	margin-bottom 10px
.img-logo
	margin-top 30px
	width 95%
.space-right
	margin-right 10px
// generic stuff
a
	cursor pointer
	transition all animation-short
	&:hover
		text-decoration none
	&:focus
		text-decoration none
		outline none
button.btn:focus, button.btn:active:focus
	outline none

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
	display none

::-webkit-scrollbar
	height 12px
	width 12px

::-webkit-scrollbar-thumb
	-webkit-border-radius border-radius-small

.padder
	padding 15px
.padder-notop
	padding 0 15px 15px
.padder-nobottom
	padding 15px 15px 0 15px
label
	&.label-small
		font-size 13px
	&.label-message
		margin 15px 0 0 10px

// :headers
h1
	font-family font-header
	text-transform lowercase
h2
	font-family font-header
	text-transform uppercase

h1, h2
	font-size 36px
	margin-bottom 10px
	margin-top 20px
h3
	font-size 28px
	font-family font-header
	text-transform uppercase

// :hr
hr
	margin-top 10px
	border-width 2px

label
	font-weight font-weight-normal
	margin-bottom 1px
	white-space nowrap
	overflow hidden
	text-overflow ellipsis
	&.block
		display block
	i.fa, i.icon
		margin-right 10px
	span
		margin-right 10px
		&.pipe
			margin-right 10px
			&:after
				content '|'
				margin-left 10px
			&:last-child:after
				content ''
	&.label-download
		padding-top 9px
		margin-right -25px

// :navbar
.navbar-default
	transition background-color animation-long
	border-radius 0
.navbar-brand
	position relative
	.icon
		font-size 115px
		position absolute
		top -67px
		transition all animation-long

// semi-transparent layer for dropdown
.dropdown-menu
	border-radius border-radius-large
	&:after
		border-radius border-radius-large
		content ""
		height 100%
		left 0
		position absolute
		top 0
		width 100%
		z-index -1
	& > li > a
		padding 5px 15px


// :input
.input-group
	margin-bottom 15px

.form-control
	height 28px
	padding-left 3px
	border-radius 14px
	border none

.input-group-addon
	padding-right 3px
	border-radius 14px
	border none
	i.fa-search
		margin-left -2px
		margin-top 2px

.tab-content, .panel-content
	textarea
		width 100%
		height 80px
		padding 5px
		margin 0
		resize none
		border none
		border-radius border-radius-small

// :buttons
button.btn
	transition all animation-short

	&.btn-default, &.btn-primary
		padding 1px 20px 0px
		font-family font-header
		font-size 20px
		text-transform uppercase
		border none
	&.btn-lg
		font-size 26px
		padding 2px 30px 1px
		border-radius border-radius-large
		.fa
			font-size 20px
	&.btn-xs
		padding 2px 10px 0px
		line-height 1
		.fa
			font-size 20px
	&.dropdown-toggle
		width 40px
	&.btn-comment
		margin-right 15px
		margin-bottom 15px
.btn-group.btn-media
	width 100%
	& > .btn
		padding-left 0
		padding-right 0

.btn-group
	&.btn-group-flex
		display inline-flex
		width 100%

	.btn + .btn, .btn + .btn-group, .btn-group + .btn, .btn-group + .btn-group
		margin-left 2px


// :view types
ul.viewtype-panel
	float right
	margin-top -34px
	position relative
	list-style none
	li
		display inline
		margin-left 15px
		&.active i
			cursor default
		i
			font-size 18px
			cursor pointer
			transition all animation-short

// :table :panel
.panel-triangle
	position absolute
	width 0px
	height 0px
	left -8px
	top 11px
	border-width 9px 9px 9px 0
	border-style solid
	transition background-color animation-short

.panel
	border-radius border-radius-small
	h1
		margin-top 0
		font-size 28px
		font-family font-content
		font-weight font-weight-bold
		text-transform none
	h3
		font-size 26px
		font-family font-header
		text-transform uppercase
		white-space nowrap
		overflow hidden
		text-overflow ellipsis

	textarea
		border none
	& > h3
		margin-top 15px
		margin-left 15px

// common to compact and extended
.panel-compact, .panel-extended
	cursor pointer
	transition all 500ms cubic-bezier(0.190, 1.000, 0.220, 1.000)
	transform translateY(0) scale(1, 1)
	&:hover
		transform translateY(-5px) scale(1.03, 1.03)

// :table panes :compact
.panel-compact
	text-align center
	margin-top 10px

	.img
		border-top-left-radius border-radius-small
		border-top-right-radius border-radius-small

	h3
		text-align center
	label
		font-weight font-weight-normal
		margin-bottom 15px

// :table panes :extended
.panel-extended
	&:hover
		transform translateY(-3px) scale(1.01, 1.01)

	.img-wrapper
		width list-sidebar-width
		float left
		.img
			border-top-left-radius border-radius-small
			border-top-right-radius border-radius-small
	.data-wrapper
		margin-left list-sidebar-width + 15px

	h3
		font-size 32px
		margin-top 10px
		margin-bottom 5px

	.ratingbox
		position absolute
		right 15px
		top -5px

.panel-small
	border-radius border-radius-large
	margin 15px
	position relative
	.panel-header
		border-radius border-radius-large border-radius-large 0 0
		padding 4px 14px 3px
		i.fa
			margin-left 10px
			cursor pointer
			transition color animation-short
	.panel-content
		padding 15px 15px 5px
		textarea
			margin-bottom 8px
	.panel-footer
		border none
		border-radius 0 0 border-radius-large border-radius-large

.panel.panel-backglass
	height 250px
	h3
		margin 10px 15px 8px

.flipbox-backglass
	height 250px
	hr
		margin 0 15px
	h3
		text-align center
	.oneline
		text-align center
		margin 5px 0
	.morelines
		margin 5px 15px

	.backglass-description
		padding 5px 5px 9px 15px
		height 125px
		overflow hidden
		position relative

	footer
		position absolute
		bottom 8px
		width 100%
		.third
			width 32%
			display inline-table
			padding-top 5px
			border-right-width 2px
			border-right-style solid
			text-align center
			&:last-child
				border none

// :details view
h1 + h3.pull-right
	margin-top -42px

.panel-detailed
	.sidebar-wrapper
		float left
		margin 15px
		width panel-sidebar-width
		.img
			padding-bottom 176%
			border-radius border-radius-small
	.data-wrapper
		margin-left panel-sidebar-width + 30px
		h1
			font-size 26px
			font-family font-content
			font-weight font-weight-bold
			text-transform none
			margin-bottom 0
		accordion
			& > .panel-group
				& > .panel
					margin-right 15px

// :table list
.table-wrapper
	margin-left 15px
	margin-right 15px

// :table
table.table

	tr > th
		font-weight font-weight-normal

	tr > th, tr > td
		border none
		padding 5px 0
		&:first-child
			padding-left 10px
		&:last-child
			text-align right
		&.name
			font-weight font-weight-bold
		&.td-dlbtn
			width 50px

	&.table-striped tr
		& > td.nostripe
			padding-left 5px

	&.table-selectable tr
		& > td
			cursor pointer
			transition all animation-shorter

// :selectable list
ul.selectable
	padding-left 20px
	> li
		list-style-type none
		&.selected
			font-weight font-weight-bold
			margin-left -20px
			&:before
				display inline-block
				width 20px
				font-family FontAwesome
				font-size 20px
				font-style normal
				font-weight normal
				line-height 1
				-webkit-font-smoothing antialiased
				-moz-osx-font-smoothing grayscale
			&.desc:before
				content '\f107'
			&.asc:before
				content '\f106'

// :accordion
accordion
	& > .panel-group
		& > .panel
			border none
			border-radius border-radius-large
			& > .panel-heading
				padding 8px 10px 5px
				border-top-left-radius border-radius-large
				border-top-right-radius border-radius-large
				h4
					text-transform uppercase
					font-weight font-weight-bold
				a:hover
						text-decoration none
						cursor pointer
			& + .panel
				margin-top 15px
			& > .panel-collapse
				& > .panel-body
					border-top none
					background-color transparent

accordion.accordion-glued
	& > .panel-group
		& > .panel
			border none
			border-radius 0
			& > .panel-heading
				padding 7px 9px
				border-radius 0
				border-top 2px solid rgba(0, 0, 0, 0.34)
			& + .panel
				margin-top 0
		& > .panel:first-child
			border-top-left-radius border-radius-large
			border-top-right-radius border-radius-large
			& > .panel-heading
				border-top-left-radius border-radius-large
				border-top-right-radius border-radius-large
		& > .panel:last-child
			border-bottom-left-radius border-radius-large
			border-bottom-right-radius border-radius-large
		& > .panel:first-child & > .panel-heading
				border-bottom none

// :tabs
.tabbable
	&.tabset-newcomment
		margin 15px
	&.tabset-moderequest
		margin 15px 0
	ul.nav-tabs
		border none
		li
			margin-bottom 0
			&.active
				a
					border none
			a
				padding 4px 15px
				font-size 20px
				border none
				border-radius border-radius-large border-radius-large 0 0
	.tab-content
		padding 10px 15px 15px 13px
		border-radius 0 border-radius-large border-radius-large border-radius-large
		textarea
			margin-top 5px
	label.label-small
		margin-top 7px

section.footer
	text-align center
	margin-top -20px
	margin-bottom 20px
	font-weight
	i.fa
		margin-right 10px
		font-size 20px
	a
		transition all animation-short

// :modals
.modal-dialog
	.modal-content
		border-radius 3px
		.modal-header
			border-radius 3px 3px 0 0
			h3
				margin 3px 5px 0
		.modal-footer
			border-radius 0 0 3px 3px

// :markdown
.markdown
	& > *:first-child
		margin-top 0
	h1, h2
		font-family font-content
		text-transform none
	h3, h4, h5
		font-family font-content
		text-transform none
	h1
		font-size 30px
		font-weight font-weight-thin
	h2
		font-size 25px
		font-weight font-weight-thin
	h3
		font-size 20px
		font-weight font-weight-bold
	h4
		font-size 18px
		font-weight font-weight-bold
	h5, h6
		font-size 16px
		font-weight font-weight-normal
		text-decoration underline
	a
		text-decoration underline
	pre code
		font-size 16px
	blockquote
		font-size 16px

// :image
.img
	position relative
	width 100%
	height 0
	padding-bottom 80% // % of width, defines aspect ratio
	background-repeat no-repeat
	background-position center center
	background-size cover
	&.img-fullspan
		padding 0
		border-radius border-radius-small
	& > .btn.btn-lg
		width 100%
		bottom -1px
		position absolute
		border-radius 0 0 border-radius-small border-radius-small

img, .img
	&.fade-after-load
		opacity 0
		transition opacity 150ms
		&.loaded
			opacity 1


// :avatar
.media-avatar-medium, .thumbnail > img.media-avatar-medium
	width 64px
	height 64px
	margin-left 15px
	border-radius 32px
	&.pull-left
		margin-right 0px
	& + .media-body > .panel
		margin-top 0px
		margin-left 15px
	& + .media-body > .tabbable
		margin-top 0px
div.media-avatar-medium:before
	margin-left 15px
	margin-top 14px
	position absolute
	font-family icons
	font-size 33px
	font-style normal
	font-weight normal
	line-height 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	content '\e605'

.thumbnail.thumbnail-avatar
	border none
	width 130px
	margin-bottom 0px
	& > img
		margin 0 auto
	.caption
		text-align center
		h1
			margin-top 0
			margin-bottom 5px
			font-size 16px
			font-family font-content
			font-weight font-weight-bold
		label
			white-space normal

// :rating :star
.ratingbox
	.ratingbox-left
		display inline
		position relative
		.ratingbox-rating
			display inline
			font-size 50px
			font-weight font-weight-thin
			cursor default
			&.rating-user
				position absolute
				right 0
	.ratingbox-right
		display inline
		position relative
		.votes
			width 80px
			display inline-block
			margin-left 5px
			cursor default
		.rating-avg, .rating-user
			position absolute
			left 4px
			top -24px
			white-space nowrap
		.rating-user
			cursor pointer

	.rating-hide
		color transparent
	.star-left
		width 7.5px
		overflow hidden
	.star-right
		overflow hidden
		margin-right 3px
		&:before
			margin-left -7.5px
			overflow hidden
