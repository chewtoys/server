color-black = black
color-background = #211f1d
color-darkest = rgba(255, 255, 255, 0.06)
color-darker = rgba(255, 255, 255, 0.15)
color-dark = rgba(255, 255, 255, 0.2)
color-light = rgba(255, 255, 255, 0.25)
color-lighter = rgba(255, 255, 255, 0.5)
color-primary = #ec843d

font-header = langdon
font-content = 'Raleway', sans-serif

border-radius-small = 2px;
border-radius-large = 8px;

_font-weight-thin = 100
_font-weight-extralight = 200
_font-weight-light = 300
font-weight-normal = 400
_font-weight-medium = 500
_font-weight-semibold = 600
font-weight-bold = 700
_font-weight-extrabold = 800
_font-weight-ultrabold = 900

// background
body
  background-color black
  color color-lighter
  font-family font-content
  font-weight font-weight-normal
  font-size 16px

.navbar-default
  background-color rgba(0, 0, 0, 0.2)
  border-radius 0
  border-color color-primary

.container.container-topmost
  background-color color-background
  padding-top 50px

.col-main
  padding 0 30px
.col-menu
  background-color color-darkest
  padding-bottom 25px

// :headers
h1
  color color-primary
  font-family font-header
  text-transform lowercase
h2
  color color-light
  font-family font-header
  text-transform uppercase

h1, h2
  font-size 36px
  margin-bottom 10px
  margin-top 20px

// :hr
hr
  margin-top 10px
  border-color color-light
  border-width 2px

// :input
.form-control
  height 28px
  box-shadow none
  color color-light
  background-color color-darker
  padding-left 3px
  border-radius 14px
  border none
  &:focus
    box-shadow none
.input-group-addon
  color color-light
  background-color color-darker
  padding-right 3px
  border-radius 14px
  border none

// :compact :table list
.panel-table-compact
  border-radius border-radius-small
  background-color color-darkest
  box-shadow 0 0 5px 1px rgba(0, 0, 0, 0.3)
  text-align center
  .img
    position relative
    width 100%
    height 0
    padding-bottom 80% // % of width, defines aspect ratio

    background-repeat no-repeat
    background-position center center
    background-size cover
  h3
    font-size 26px
    font-family font-header
    text-transform uppercase
    text-align center
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  label
    font-weight font-weight-normal
    margin-bottom 15px


// :selectable list
ul.selectable
  padding-left 20px
  > li
    list-style-type none
    &.selected
      color color-primary
      font-weight font-weight-bold


// :collapsable
.collapsable
  margin-top 15px
  .collapsable-header
    width 100%
    background-color color-darker
    padding 5px 0 3px 6px
    border-top-left-radius border-radius-large
    border-top-right-radius border-radius-large
    &.collapsed
      border-bottom-left-radius border-radius-large
      border-bottom-right-radius border-radius-large
    & > h1
      color color-lighter
      font-family font-content
      font-weight font-weight-bold
      font-size 18px
      text-transform uppercase
      display inline
      margin 0

  .collapsable-content
    width 100%
    padding 8px 8px 5px 8px
    background-color color-darkest
    border-bottom-left-radius border-radius-large
    border-bottom-right-radius border-radius-large

