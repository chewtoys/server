@import('nib')
@import('color-def')

body.theme-dark
	background-image url('/images/background_outer.png')
.theme-dark
	color color-lighter
	label
		span
			&.pipe
				&:after
					color color-light
	.label-name
		a
			color color-lighter
			&:hover
				color color-lightest
	.label-version, .label-code
		background-color color-lighter
		color black
	textarea
		background-color color-darkest
	hr
		border-color color-darker
	a
		color color-light
		&:hover
			color color-lighter

	.col-menu h4
		color color-primary

	img, .img
		&.fade-after-load
			background-color color-darkest


	.btn
		&.btn-default, &.btn-primary
			color color-light
			background-color color-dark
			&:hover
				color color-lighter
				background-color color-light
				box-shadow 0 0 3px 1px rgba(black, 0.3)
			.badge
				background-color color-light
				color color-lighter-inv
		&.btn-primary
			color color-background
			background-color color-primary
			&:hover
				color color-background
				background-color color-primary-light
				box-shadow 0 0 3px 1px rgba(black, 0.3)
			.badge
				background-color color-background
				color color-lightest

	// :table
	table.table
		tr > th
			color color-primary
		&.table-striped tr
			&:nth-child(odd) > td
				background-color color-darkest
				&.nostripe
					background-color transparent
		&.table-selectable tr
			&:hover
				td
					color color-primary

	// :navbar
	.nav.navbar-nav li
		.dropdown-menu
			background-color color-navbar
			border-left-color color-primary
			border-right-color color-primary
			border-bottom-color color-primary

	.navbar-default .navbar-nav > .open
		& > a, & > a:hover, & > a:focus
			background-color transparent

	ul.dropdown-menu table
		tr
			td
				border-bottom-color color-darker
				i:hover
					color color-lightest
			&.divider-bottom td
				border-bottom-color color-dark
			&.divider-top td
				border-top-color color-dark
			&[ng-click]:hover
				background-color color-darker
				color color-lightest

	.btn-group.open .dropdown-menu
		background-image url('/images/background.png')
		&:after
			background-color color-dark
		& > li > a
			color color-lighter
			&:hover
				background-color color-darker
				color color-lightest
		.divider
			background-color color-light
	.btn-lg + .dropdown-menu:after
		background-color color-dark + color-darkest

	.modal-content
		background-image url('/images/background_white.png')
		color color-lightest-inv

	// :accordion
	accordion
		& > .panel-group
			& > .panel
				background-color color-darkest
				& > .panel-heading
					background-color color-darkest
					h4
						color color-lightish
					a:hover
						color color-lightest

	// :tabs
	.tabset
		ul.nav-tabs li
			&.active
				a
					color color-lighter
					background-color rgba(white, 0.11)
				.panel-triangle
					border-color transparent #454442 transparent transparent
			.panel-triangle
				border-color transparent #383735 transparent transparent
			a
				color color-light
				background-color color-darkest
				&:hover
					color color-lighter
		.tab-content
			background-color rgba(white, 0.11)
		label.label-small
			color color-light
			a
				color color-lighter
				&:hover
					color color-lightest


	section.footer
		color color-dark
		a
			color color-dark
			&:hover
				color color-light

	// :selectable list
	ul.selectable > li
		&:hover
			color color-lightest
		&.selected
			color color-primary
			&:hover
				color color-primary-light

	ul.viewtype-panel
		li
			&.active i
				color #aaa
				text-shadow 0 0 3px black
			i
				color color-light
				&:hover
					color #aaa
					text-shadow 0 0 3px black

	// :avatar
	.media-avatar, .thumbnail > img.media-avatar
		background-color color-darker
		div.media-avatar:before
			color color-darker
	.thumbnail.thumbnail-avatar
		background-color transparent
		.caption
			h1
				color color-lighter
			label
				color color-lighter

	// more :media
	.media.media-mini
		border-bottom solid 2px color-darkest
		h4, h5
			color color-lighter

	// :rating :star
	.ratingbox
		.ratingbox-left .ratingbox-rating.rating-user
			color color-primary
		.rating-user
			.star-on
				color color-primary
			.star-off
				color color-darker
		.rating-avg
			.star-on
				color color-lighter
			.star-off
				color color-darker

	// :newsfeed
	.media-news
		hr
			border-color color-darkest
		.media-body
			& > label
				a
					color color-lighter
					&:hover
						color color-lightest

	// 404 page
	.center-middle-errorpage
		i.icon-vpdb-logo-o
			color color-dark
		h1
			color color-lighter
		p
			color color-lighter
			code
				color color-lightest
				background-color color-darker
		a
			color color-light
			&:hover
				color color-lighter

	// :markdown
	.markdown
		h1, h2
			color color-lightest
		h3, h4, h5
			color color-lighter
		a
			color color-lighter
			&:hover
				color color-lightest
		code
			background-color color-light
			color black
		pre code
			background-color transparent
			color inherit
		blockquote
			border-color color-light
		pre
			color color-lighter
			border-color color-darkest
			background-color transparent
			background-image url("data:image/svg+xml;base64,")


	::-webkit-scrollbar
		background color-background
	::-webkit-scrollbar-thumb
		background color-darker
		-webkit-box-shadow 0px 1px 2px rgba(black, 0.75)
	::-webkit-scrollbar-corner
		background color-background
	::selection
		color rgba(white,0.9)
		background color-primary
	::-moz-selection
		color rgba(white,0.9)
		background color-primary

	.panel
		.list-group-item
			color color-lighter
			background-color transparent
			&:hover
				color color-lightest
			&.active
				color color-primary
				&:hover
					color color-primary-light
	user:hover
		color color-lightest


	.staging-bar
		background-image url("data:image/svg+xml;base64,")

	.bg-dark
		background-color color-darkest

.bg-dark
	textarea
		background-color rgba(white, 0.05)
		&:focus
			background-color rgba(white, 0.08)

	&.col-menu
		background-color color-darkest

	&.panel
		box-shadow 0 0 5px 1px rgba(black, 0.3)
	&.panel-compact, &.panel-extended
		&:hover
			box-shadow 0 5px 9px rgba(black, 0.5)
	&.panel-banner
		i.icon-title
			color color-primary
			& + label
				strong
					color color-lighter
		h3 small
			color inherit
		& > .row > div:hover
			color color-lightest


	.form-control
		color color-lighter
		background-color color-darker

	.input-group-addon
		color color-light
		background-color color-darker

	.third
		border-right-color color-darker

	.nano
		& > .nano-content
			padding-right 10px
		& > .nano-pane
			background-color rgba(white, 0.05)
			&  > .nano-slider
				background-color rgba(white, 0.15)

.bg-lighter
	background-color color-darkest
	.panel-triangle
		border-color transparent #454442 transparent transparent
	.panel-header
		color color-lightish
		background-color color-darkest
		i.fa
			color color-dark
			&:hover
				color color-lighter
	.panel-content
		color color-lightish
	.panel-footer
		background-color color-darkest
		.btn.btn-default
			background-color rgba(black, 0.2)
			color rgba(white, 0.2)
			&:hover
				background-color rgba(black, 0.3)
				color rgba(white, 0.3)
				box-shadow none