@import('nib')
@import('color-def')

.theme-dark

	textarea
		background-color color-darkest

	.col-menu h4
		color color-primary

	img, .img
		&.fade-after-load
			background-color color-darkest

	ul.dropdown-menu table
		tr
			td
				border-bottom-color color-darker
				i:hover
					color color-lightest
			&.divider-bottom td
				border-bottom-color color-dark
			&.divider-top td
				border-top-color color-dark
			&[ng-click]:hover
				background-color color-darker
				color color-lightest

	.btn-group.open .dropdown-menu
		background-image url('/images/background.png')
		&:after
			background-color color-dark
		& > li > a
			color color-lighter
			&:hover
				background-color color-darker
				color color-lightest
		.divider
			background-color color-light
	.btn-lg + .dropdown-menu:after
		background-color color-dark + color-darkest

	.modal-content
		background-image url('/images/background_white.png')
		color color-lightest-inv

	// :avatar
	.media-avatar, .thumbnail > img.media-avatar
		background-color color-darker
		div.media-avatar:before
			color color-darker
	.thumbnail.thumbnail-avatar
		background-color transparent
		.caption
			h1
				color color-lighter
			label
				color color-lighter

	// more :media
	.media.media-mini
		border-bottom solid 2px color-darkest
		h4, h5
			color color-lighter

	// :newsfeed
	.media-news
		hr
			border-color color-darkest
		.media-body
			& > label
				a
					color color-lighter
					&:hover
						color color-lightest

	// 404 page
	.center-middle-errorpage
		i.icon-vpdb-logo-o
			color color-dark
		h1
			color color-lighter
		p
			color color-lighter
			code
				color color-lightest
				background-color color-darker
		a
			color color-light
			&:hover
				color color-lighter

	// :markdown
	.markdown
		h1, h2
			color color-lightest
		h3, h4, h5
			color color-lighter
		a
			color color-lighter
			&:hover
				color color-lightest
		code
			background-color color-light
			color black
		pre code
			background-color transparent
			color inherit
		blockquote
			border-color color-light
		pre
			color color-lighter
			border-color color-darkest
			background-color transparent
			background-image url("data:image/svg+xml;base64,")


	::-webkit-scrollbar
		background color-background
	::-webkit-scrollbar-thumb
		background color-darker
		-webkit-box-shadow 0px 1px 2px rgba(black, 0.75)
	::-webkit-scrollbar-corner
		background color-background
	::selection
		color rgba(white,0.9)
		background color-primary
	::-moz-selection
		color rgba(white,0.9)
		background color-primary

	.panel
		.list-group-item
			color color-lighter
			background-color transparent
			&:hover
				color color-lightest
			&.active
				color color-primary
				&:hover
					color color-primary-light
	user:hover
		color color-lightest


.bg-dark
	textarea
		background-color rgba(white, 0.05)
		&:focus
			background-color rgba(white, 0.08)

	&.col-menu
		background-color color-darkest

	&.panel-compact, &.panel-extended
		&:hover
			box-shadow 0 5px 9px rgba(black, 0.5)
	&.panel-banner
		i.icon-title
			color color-primary
			& + label
				strong
					color color-lighter
		h3 small
			color inherit
		& > .row > div:hover
			color color-lightest




	.third
		border-right-color color-darker

	.nano
		& > .nano-content
			padding-right 10px
		& > .nano-pane
			background-color rgba(white, 0.05)
			&  > .nano-slider
				background-color rgba(white, 0.15)

.bg-lighter
	background-color color-darkest
	.panel-triangle
		border-color transparent #454442 transparent transparent
	.panel-header
		color color-lightish
		background-color color-darkest
		i.fa
			color color-dark
			&:hover
				color color-lighter
	.panel-content
		color color-lightish
	.panel-footer
		background-color color-darkest
		.btn.btn-default
			background-color rgba(black, 0.2)
			color rgba(white, 0.2)
			&:hover
				background-color rgba(black, 0.3)
				color rgba(white, 0.3)
				box-shadow none