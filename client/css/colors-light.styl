@import('nib')
@import('color-def')

body.theme-light
	background-image url('/images/background_white_outer.png')

.theme-light
	color color-lighter-inv
	label
		span
			&.pipe
				&:after
					color color-light-inv
		&.label-name
			a
				color color-lighter-inv
				&:hover
					color color-lightest-inv
		&.label-version
			background-color color-lighter-inv
			color white
	textarea
		background-color color-darkest-inv
	hr
		border-color color-darker-inv
	a
		color color-light-inv
		&:hover
			color color-lighter-inv
	h1, h5
		color color-primary
	h2, h3
		color color-light-inv

	.col-menu h4
		color color-primary-inv

	img, .img
		&.fade-after-load
			background-color color-darkest-inv


	.btn
		&.btn-default, &.btn-primary
			color color-light-inv
			background-color color-dark-inv
			&:hover
				color color-lighter-inv
				background-color color-light-inv
				box-shadow 0 0 3px 1px rgba(black, 0.3)
			.badge
				background-color color-light-inv
				color color-lighter
		&.btn-primary
			color color-background-inv
			background-color color-primary
			&:hover
				color color-background-inv
				background-color color-primary-light
				box-shadow 0 0 3px 1px rgba(black, 0.3)


	.container.container-topmost
		background-image url('/images/background_white.png')
		box-shadow 0 0 5px 1px rgba(black, 0.1)

	// :navbar
	.navbar-default
		background-color color-navbar-inv
		border-color color-primary

	.navbar-brand
		.icon
			&.icon-vpdb-logo-o
				color color-primary
			&.icon-vp
				color color-primary
			&.icon-db
				color color-lighter-inv
			&.icon-vpdb-logo-o, &.icon-vp, &.icon-db
				text-shadow 0 0 15px rgba(white, 0.75)
		a
			&:hover
				.icon-vpdb-logo-o
					color color-primary-dark
				.icon-vp
					color color-primary-dark
				.icon-db
					color color-lightest-inv
	.nav.navbar-nav > li
		a
			background-color transparent
			color color-darkerest-inv
			&:hover
				color color-lightest-inv
		&.active a
			background-color color-dark
			color color-primary
		.dropdown-menu
			background-color color-navbar-inv
			border-left-color color-primary
			border-right-color color-primary
			border-bottom-color color-primary

	.navbar-default .navbar-nav > .open
		& > a, & > a:hover, & > a:focus
			background-color transparent


.bg-lightest

	h3
		color color-lightish-inv
	h4
		color color-lighter-inv

	a
		color color-lighter-inv
		&:hover
			color color-lightest-inv
	label
		color color-lightish-inv

	hr
		border-color color-darkest-inv

	.modal-header
		background-color rgba(black, 0.1)
		box-shadow inset 0px 1px 3px 0px rgba(white, 0.5)
	.modal-body
		h1
			color color-lightest-inv
		.alert-danger
			color color-lightest
			background-color color-danger
		.alert-success
			color color-lightest
			background-color color-success
	.modal-footer
		background-color rgba(black, 0.1)

	.btn.btn-default
		color rgba(white, 0.6)
		background-color rgba(black, 0.25)
		&:hover
			color rgba(white, 0.7)
			background-color rgba(black, 0.35)
			box-shadow 0 0 10px 1px rgba(black, 0.1)

	.btn.btn-primary
		color rgba(white, 0.7)
		background-color rgba(black, 0.35)
		&:hover
			color rgba(white, 0.8)
			background-color rgba(black, 0.45)
			box-shadow 0 0 10px 1px rgba(black, 0.1)

	.form-group.error
		.form-control
			border-color color-danger
		label
			color color-danger
	.form-control
		box-shadow none
		color color-lighter-inv
		background-color color-lighter
		&:focus
			box-shadow none
		&::-webkit-input-placeholder, &:-moz-placeholder, &::-moz-placeholder, &:-ms-input-placeholder
			color red

	.tabbable
		ul.nav-tabs
			li
				&.active
					a
						color color-lighter-inv
						background-color rgba(black, 0.11)
				.panel-triangle
					border-color transparent #383735 transparent transparent
				a
					color color-light-inv
					background-color color-darkest-inv
					&:hover
						color color-lighter-inv
		.tab-content
			background-color rgba(black, 0.11)
		label.label-small
			color color-lighter-inv
			a
				font-weight 700
				color color-lighter-inv
				&:hover
					color color-lightest-inv

	textarea
		color color-lighter-inv
		border-color color-darkest-inv
		background-color rgba(black, 0.05)
		&:focus
			background-color rgba(black, 0.08)

	.markdown
		color color-lighter-inv
		h1, h2
			color color-lightest-inv
		h3, h4, h5
			color color-lighter-inv
		a
			color color-lighter-inv
			&:hover
				color color-lightest-inv
		code
			background-color color-light-inv
			color black
		blockquote
			border-color color-light-inv
		pre
			color color-lighter-inv
			border-color color-darkest-inv
			background-color transparent
			background-image url("data:image/svg+xml;base64,")


