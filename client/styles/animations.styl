.fade-animation
	opacity 1
	&.ng-enter, &.ng-leave, &.ng-move, &.ng-hide-add, &.ng-hide-remove
		transition 0.2s ease all

	&.ng-hide-add, &.ng-hide-remove
		display block!important
	&.ng-hide
		opacity 0

	&.ng-enter
		opacity 0
		&.ng-enter-active
			opacity 1
			background-color rgba(0,0,0,0.01)

	&.ng-leave
		opacity 1
		&.ng-leave-active
			opacity 0

	&.ng-move
		opacity 0.5

		&.ng-move-active
			opacity 1


