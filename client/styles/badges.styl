// Badges
//
// Styleguide 20


// Removable Badges
//
// Small items you can only remove, not edit.
//
// Markup:
// <div class="{$modifiers}">
//   I'm small! <span class="a">&times;</span>
// </div>
//
// .badge        - Default badge
//
// Styleguide 20.1
.badge
	font-weight $font-weight-normal
	font-size $font-size-normal
	border-radius $border-radius-large
	padding-bottom 0
	padding-left 10px
	span
		font-size 26px
		padding-left 5px
		vertical-align text-bottom

	+ .badge
		margin-left 5px


// Tag Labels
//
// For badges that are tags.
//
// Markup:
// <div class="badge {$modifiers}">
//   Buy me!
// </div>
//
// badge--tag        - Tag
//
// Styleguide 20.2
.badge--tag

	padding-left 5px
	padding-bottom 5px
	padding-right 10px
	padding-top 5px
	margin-left 20px
	margin-bottom 5px
	border-top-right-radius $border-radius-large
	border-bottom-right-radius $border-radius-large
	border-top-left-radius 0
	border-bottom-left-radius 0
	&:before
		background-repeat no-repeat
		content " "
		height 30px
		margin-left -23px
		margin-top -5px
		position absolute
		width 30px

	+ .badge--tag
		margin-left 25px


// Small Badge
//
// Looks good inline.
//
// Markup:
// <p>This is a <span class="badge {$modifiers}">required</span> attribute.</p>
//
// badge--small        - Small Badge
//
// Styleguide 20.3
.badge--small
	font-size 80%
	padding-top 4px
	padding-bottom 2px
	padding-left 5px
	padding-right 5px
	text-transform uppercase
	border-radius $border-radius-small

	&.badge--tag:before
		height 22px
		margin-top -4px
		margin-left -19px

// APIDoc verb
//
// Verb in the APIDoc, like GET, POST, PUT etc
//
// Markup:
// <div class="badge {$modifiers} badge--verb--get">GET</div>
// <div class="badge {$modifiers} badge--verb--post">POST</div>
// <div class="badge {$modifiers} badge--verb--put">PUT</div>
// <div class="badge {$modifiers} badge--verb--delete">DELETE</div>
// <div class="badge {$modifiers} badge--verb--patch">PATCH</div>
// <div class="clearfix"></div>
//
// badge--verb - HTTP Verb
//
// Styleguide 20.4
.badge--verb
	float left
	width 100px
	margin-right 15px
	padding-top 5px
	padding-bottom 5px
	font-weight $font-weight-bold
	text-transform uppercase
	border-radius $border-radius-small
	transition background-color $animation-short
