//
// Dark theme
// --------------------------------------------------
.theme-dark
	.btn

		// default button
		&, &.btn-default
			color $color-light
			background-color $color-dark
			&:hover
				color $color-lighter
				background-color $color-light
				box-shadow 0 0 3px 1px rgba(black, 0.3)
			.badge
				background-color $color-light
				color $color-lighter-inv

		// primary button
		&.btn-primary
			color $color-background
			background-color $color-primary
			&:hover
				color $color-background
				background-color $color-primary-light
				box-shadow 0 0 3px 1px rgba(black, 0.3)
			.badge
				background-color $color-background
				color $color-lightest

	// panel footer buttons are darker
	.panel-footer .btn
		&, &.btn-default
			color $color-dark
			background-color $color-dark-inv
			&:hover
				color rgba(white, 0.3)
				background-color rgba(black, 0.3)
				box-shadow none

//
// Light theme
// --------------------------------------------------
.theme-light
	.btn

		// default button
		&, &.btn-default
			color rgba(white, 0.6)
			background-color rgba(black, 0.25)
			&:hover
				color rgba(white, 0.7)
				background-color rgba(black, 0.35)
				box-shadow 0 0 10px 1px rgba(black, 0.1)

		// primary button
		&.btn-primary
			color $color-background-inv
			background-color $color-primary-black
			&:hover
				color $color-lightest
				background-color $color-primary-black-light
				box-shadow 0 0 10px 1px rgba(white, 0.7)

		// secondary button
		&.btn--secondary
			color rgba(white, 0.7)
			background-color rgba(black, 0.35)
			&:hover
				color rgba(white, 0.8)
				background-color rgba(black, 0.45)
				box-shadow 0 0 10px 1px rgba(black, 0.1)
