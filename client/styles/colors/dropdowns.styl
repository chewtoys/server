//
// Dark theme
// --------------------------------------------------
.theme-dark

	// In navbar
	.navbar-nav li > .uib-dropdown-menu

		border-left-color $color-primary
		border-right-color $color-primary
		border-bottom-color $color-primary

	@media (min-width: $bootstrap-screen-sm-min)
		.navbar-nav li > .uib-dropdown-menu
			background-color $color-navbar

//
// Light theme
// --------------------------------------------------
.theme-light

	// In navbar (dark)
	.nav.navbar-nav li > .uib-dropdown-menu
		margin-top 0
		border-top 1px solid #2d2d2b // hack to hide the bottom line of the bar
		background-image none
		background-color $color-navbar-inv
		border-left-color $color-primary-black
		border-right-color $color-primary-black
		border-bottom-color $color-primary-black
		&:after
			background-color transparent

	// Non-navbar (light)
	.uib-dropdown-menu
		background-image url('/images/background_white.png')
		box-shadow 0 3px 2px rgba(0, 0, 0, 0.07)
		border-left-color $color-darkest-inv
		border-right-color $color-darkest-inv
		border-bottom-color $color-darkest-inv
		&:after
			background-color $color-lightish
		li:hover
			background-color $color-darkest-inv
			h3
				color $color-primary-black
			.img-avatar
				border 1px solid $color-primary-black
