//
// Dark theme
// --------------------------------------------------
body.theme-dark

	// <input>, <textarea>, and <select> elements
	.form-control
		color $color-lighter
		background-color $color-darker

	// Addon has the same background-color as the form control
	.input-group-addon
		color $color-light
		background-color $color-darker

	// Accordion
	accordion
		> .panel-group
			> .panel
				background-color $color-darkest
				> .panel-heading
					background-color $color-darkest
					h4 // TODO isolate
						color $color-lightish
					a:hover
						color $color-lightest


//
// Light theme
// --------------------------------------------------
body.theme-light

	// <input>, <textarea>, and <select> elements
	.form-control
		color $color-lighter-inv
		background-color $color-lighter

	// On error:
	.form-group.error
		.form-control
			border-color $color-danger
		label
			color $color-danger

	// Addon has the same background-color as the form control
	.input-group-addon
		color $color-dark-inv
		background-color $color-lighter
