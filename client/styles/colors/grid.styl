//
// Dark theme
// --------------------------------------------------
.theme-dark

	.container--topmost
		box-shadow 0 0 5px 1px rgba(black, 0.5)

	.col--menu
		background-color rgba(white, 0.04)

	.carousel-indicators
		.active
			background-color $color-primary
			border-color transparent
			&:hover
				border-color transparent
		> li
			border-color $color-lighter
			&:hover
				border-color $color-lightest

	a.carousel-control:hover .svg-icon
		fill $color-primary
	a.carousel-control .svg-icon
		fill $color-lighter


//
// Light theme
// --------------------------------------------------
.theme-light

	.container--topmost
		background-image url('/images/background_white.png')
		box-shadow 0 0 5px 1px rgba(black, 0.1)

	.col--menu
		background-color $color-darkest-inv
