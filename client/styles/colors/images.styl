//
// Dark theme
// --------------------------------------------------
.theme-dark

	.img:before
		opacity 1
		position absolute
		width 100%
		height 100%
		background-color red
		content " "

	// Avatar
	.avatar-placeholder
		background-color $color-darker
		.avatar-placeholder:before
			color $color-darker

//
// Light theme
// --------------------------------------------------
.theme-light

	// Avatar
	.avatar-placeholder
		background-color $color-darker-inv
		&:before
			color $color-lighter