//
// Dark theme
// --------------------------------------------------
body.theme-dark

	// Global color and background
	color $color-lighter
	background-image url('/images/background_outer.png')

	// links
	a, [ng-click]
		color $color-light
		&:hover
			color $color-lighter

	// hr
	hr
		border-color $color-darker

	// TODO change to <footer>
	section.footer
		&, a
			color $color-dark
		a:hover
			color $color-light

	// text selection color
	::selection
		color rgba(white,0.9)
		background $color-primary
	::-moz-selection
		color rgba(white,0.9)
		background $color-primary


//
// Light theme
// --------------------------------------------------
body.theme-light

	// Global color and background
	color $color-lighter-inv
	background-image url('/images/background_white_outer.png')

	// links
	a, [ng-click]
		color $color-light-inv
		&:hover
			color $color-lighter-inv

	// hr
	hr
		border-color $color-darker-inv

	// TODO change to <footer>
	section.footer
		&, a
			color $color-lighter
		a:hover
			color $color-lightest

	::selection
		color rgba(white,0.9)
		background $color-primary-black
	::-moz-selection
		color rgba(white,0.9)
		background $color-primary-black