//
// Dark theme
// --------------------------------------------------
.theme-dark

	// links
	a, .a
		color $color-light
		&:hover
			color $color-lighter
		&.a--lighter
			color $color-lighter
			&:hover
				color $color-lightest
		&.a--darker
			color $color-dark
			&:hover
				color $color-light

		&:hover .h--primary
			color $color-primary-light

	// hr
	hr
		border-color $color-darker
		&.hr--light
			border-color $color-darkest

	// inline code
	code
		color $color-lighter
		background-color $color-darker

	// TODO change to <footer>
	section.footer
		&, a
			color $color-dark
		a:hover
			color $color-light

	// text selection color
	::selection
		color rgba(white,0.9)
		background $color-primary
	::-moz-selection
		color rgba(white,0.9)
		background $color-primary

// Global color and background
body.theme-dark
	color $color-lighter
	background-image url('/images/background_outer.png')


//
// Light theme
// --------------------------------------------------
.theme-light

	color $color-lighter-inv

	// links
	a, .a
		color $color-light-inv
		&:hover
			color $color-lighter-inv
		&.a--lighter
			color $color-lighter-inv
			&:hover
				color $color-lightest-inv
		&.a--darker
			color $color-dark-inv
			&:hover
				color $color-light-inv

		&:hover .h--primary
			color $color-primary-black-light

	// hr
	hr
		border-color $color-darker-inv
		&.hr--light
			border-color $color-darkest-inv


	// TODO change to <footer>
	section.footer
		&, a
			color $color-lighter
		a:hover
			color $color-lightest

	::selection
		color rgba(white,0.9)
		background #bb7f56
	::-moz-selection
		color rgba(white,0.9)
		background #bb7f56

// Global color and background
body.theme-light
	color $color-lighter-inv
	background-image url('/images/background_white_outer.png')
