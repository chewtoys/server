//
// Dark theme
// --------------------------------------------------
.theme-dark

	// Headings
	h1, h2, h3, h4, h5, h6
		color $color-light
		.svg-icon
			fill $color-light
		> strong
			color $color-primary
	.h--primary
		color $color-primary
		small
			color $color-primary
	.h--lighter, h3
		color $color-lighter

	.pre-h4
		color $color-lighter
	.text-info
		color $color-primary

	tt
		background-color $color-darker-inv
	td > tt
		background-color transparent

//
// Light theme
// --------------------------------------------------
.theme-light

	// Headings
	h1, h2, h3, h4, h5, h6, .pre-h4
		color $color-light-inv
		.svg-icon
			fill $color-light-inv
		> strong
			color $color-primary-black



	.h--primary
		color $color-primary-black
	.h--lighter, h3
		color $color-lighter-inv

	.pre-h4
		color $color-lightish-inv

	.text-info
		color $color-primary-black

	code
		color inherit
		background-color $color-darkest-inv