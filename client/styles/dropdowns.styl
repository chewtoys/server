// .dropdown-menu          - Dropdown menu
//
// Styleguide 8.1
.navbar-nav > li .dropdown-menu
	padding 5px
	margin-top 1px
	border-left solid 1px
	border-right solid 1px
	border-bottom solid 1px
	> li > a
		padding-left 10px

// semi-transparent layer for dropdown
.dropdown-menu
	border-radius $border-radius-small
	width 100%
	&:after
		border-radius $border-radius-small
		content ""
		height 100%
		left 0
		position absolute
		top 0
		width 100%
		z-index -1
	li
		transition all $animation-short
		cursor pointer
		padding-top 1px
		margin-top -1px

// Typography
.dropdown-menu
	font-size $font-size-small
	> li > a
		font-weight $font-weight-normal

// Media inside dropdown
.dropdown-menu
	.media
		margin-left 10px
		margin-right 10px
		margin-top 7px
		padding-bottom 0

	li:last-child .media
		border-bottom none

.theme-light
	.datepicker + .dropdown-menu
		*
			outline none

		[datepicker]

			button.btn.btn-default
				background none
				box-shadow none
				border none
				color $color-lightest-inv

				.text-muted
					color $color-light-inv
				.text-info
					color $color-primary-dark


			table thead > tr:first-child th
				background-color $color-darker-inv
				button.btn.btn-default
					color $color-light-inv
					.svg-icon
						fill $color-light-inv



.datepicker + .dropdown-menu

	padding-top 0
	margin-top 0
	width inherit
	min-width -moz-max-content // ff hack

	[datepicker]

		button.btn.btn-default
			.text-info
				font-weight $font-weight-bold

		table
			thead > tr:nth-child(2) th
				padding-top 30px

			td:first-child, th:first-child
				padding-left 15px
			td:last-child, th:last-child
				padding-right 30px


	li
		cursor default
		margin-top  0
		padding-top 0
		background none
		&:hover
			background none !important

	table tr
		button.btn.btn-default
			font-family $font-content
			font-size $font-size-small
			background-color $color-darkest-inv
			border-radius 0
			padding 3px 10px
		th > small
			text-transform uppercase
			font-size $font-size-smaller
			color $color-light-inv
		td
			padding 1px
			em
				font-size $font-size-small
				font-weight $font-weight-normal
				color $color-dark-inv
