//
// Forms
// --------------------------------------------------


// Text box
textarea
	border none

// Those are basically all <input>, <textarea>, and <select> elements
.form-control
	border-radius $border-radius-small
	border none
	box-shadow none
	font-size $font-size-normal
	&:focus
		box-shadow none
// On error
.form-group.error .form-control
	border-style solid
	border-width 1px

// Search box gets special treatment
.input--search
	height 28px
	padding-left 3px
	border-radius 14px
	border none

// Large input box
.input-lg
	border-radius $border-radius-large

// Addon
.input-group-addon
	padding-right 3px
	border-radius 14px
	border none
	// fix search icon position
	i.fa-search
		margin-left -2px
		margin-top 2px

.textarea--full
	width 100%
	height 80px
	padding 5px
	margin 0
	resize none
	border none
	border-radius $border-radius-small

// Large radio buttons
.radio--lg
	cursor default
	input[type=radio]
		display none
		cursor default
		& + span
			cursor pointer
			display block
			font-weight $font-weight-bold
			font-size $font-size-large
			text-transform uppercase
			margin-left 20px
			transition color $animation-short
			&:before
				cursor pointer
				position absolute
				margin-left -31px
				margin-top -2px
				font-size 36px // icon
				font-family icons
				font-style normal
				font-weight normal
				line-height 1
				-webkit-font-smoothing antialiased
				-moz-osx-font-smoothing grayscale
				transition color $animation-short
				content "\e617" /* Radio Unchecked */
		&:checked + span
			cursor default
			&::before
				cursor default
				content "\e618" /* Radio Checked */



// Move this to input-groups.styl if it gets bigger
.input-group
	margin-bottom 15px

// Normal line breaks for descriptions after label
.checkbox > label div
	white-space normal
