//
// Forms
// --------------------------------------------------


// Text box
textarea
	border none

// Those are basically all <input>, <textarea>, and <select> elements
.form-control
	border-radius $border-radius-small
	border none
	box-shadow none
	font-size $font-size-normal
	&:focus
		box-shadow none
// On error
.form-group.error .form-control
	border-style solid
	border-width 1px


// Search box gets special treatment
.input--search
	height 28px
	padding-left 3px
	border-radius 14px
	border none

// Large input box
.input-lg
	border-radius $border-radius-large

// Addon
.input-group-addon
	padding-right 3px
	border-radius 14px
	border none
	// fix search icon position
	i.fa-search
		margin-left -2px
		margin-top 2px


// Move this to input-groups.styl if it gets bigger
.input-group
	margin-bottom 15px