	width $list-square-width
	float left
.col--list-mini-right
	margin-left $list-square-width + 15px
	margin-top 10px
	margin-right 5px

// Apply this to elements you want to center vertically that have a height of 100px.
.vertical-center--100
	top 50%
	margin-top -45px
	position absolute
	width 100%
