// Grids
//
// Styleguide 3


// Main container, there's only one element with this class.
.container--topmost
	padding-top 50px
	margin-bottom 30px
	border-bottom-radius($border-radius-large)

// A row that fills the entire height so we can put a background color on it.
.row--fullheight
	overflow hidden
	border-bottom-radius($border-radius-large)
	> div
		margin-bottom -99999px
		padding-bottom 99999px

// A row that doesn't pad
.row--fullwidth
	margin-left -15px
	margin-right -15px

// Our main- and menu column
.col--main
	padding-left 30px
	padding-right 30px
	position relative
.col--menu
	padding-bottom 25px


// Extended List Panel
//
// Columns for the extended game list panel
//
// Markup:
// <div class="panel">
//   <div class="clearfix"></div>
//   <div class="{$modifiers}">
//     <div class="img img--ar-bg img--rounded-left" img-bg="/images/styleguide_16_9.jpg"></div>
//   </div>
//   <div class="col--list-extended-right">
//     <h1 class="h--small h--no-margin">Content here</h1>
//   </div>
//   <div class="clearfix"></div>
// </div>
//
// .col--list-extended-left - Extended List Panel
//
// Styleguide 3.1
.col--list-extended-left
	width $list-sidebar-width
	float left
.col--list-extended-right
	margin-left $list-sidebar-width + 15px
	margin-top 10px

