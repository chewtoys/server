
.svg-icon
	height 24px
	width 24px
	vertical-align middle
	transition fill $animation-short

	&.small
		height 20px
		width 20px

	&.smaller
		height 16px
		width 16px

	&.svg-2x
		height 32px
		width 32px

	&.svg-3x
		height 50px
		width 50px

	&.svg-4x
		height 75px
		width 75px

	&.shift-up
		margin-top -5px

	&.shift-up-2x
		margin-top -7px

&.svg-spin
	animation svg-spin 2s infinite linear
&.svg-spin--slow
	animation svg-spin 4s infinite linear

@keyframes svg-spin
	0%
		transform rotate(0deg)
	100%
		transform rotate(359deg)

body > svg
	display none

.theme-dark .svg-icon
	fill $color-lighter

.theme-light .svg-icon
	fill $color-lighter-inv