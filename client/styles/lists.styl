// Sort Option List
//
// A list where you can toggle sort options. Clicking once on an item will
// highlight it with a default sort direction and following clicks will toggle
// the sort direction.
//
// > The directive that contains the selection logic is called `sort`.
//
// Markup:
// <ul class="{$modifiers}">
//   <li d="desc" sort="name">Date Added</li>
//   <li d="asc" sort="year">Original Release</li>
//   <li d="asc" sort="name" class="asc selected">Name</li>
//   <li d="desc" sort="rating">Rating</li>
//   <li d="desc" sort="views">Views</li>
//   <li d="desc" sort="gamedownloads">Downloads</li>
// </ul>
//
// .list--sort-options    - Sort Option List
//
// Styleguide 12.2
.list--sort-options
	padding-left 20px
	> li
		list-style-type none
		transition all $animation-shorter
		cursor pointer
		&.selected
			font-weight $font-weight-bold
			margin-left -20px
			&:before
				display inline-block
				width 20px
				font-family FontAwesome
				font-size 20px // icon
				font-style normal
				font-weight normal
				line-height 1
				-webkit-font-smoothing antialiased
				-moz-osx-font-smoothing grayscale
			&.desc:before
				content '\f107'
			&.asc:before
				content '\f106'

ul.list--files
	padding 0
	> li
		border-radius $border-radius-large
		margin-top 15px
		margin-bottom 0
		list-style-image none
		padding 3px

	.col--list-files-left
		float left
		> .icon
			font-size 72px
			margin-left 7px

	.col--list-files-right
		margin-left 72px
		.block:first-child
			margin-top 5px
			margin-bottom -5px


// List group within panel-body
// @todo refactor, this was done for the style guide panel, the game filter panels look different.
.panel-body > .list-group
	margin -15px -15px
	.list-group-item
		padding 5px 15px
		border-radius 0
		border-left-style none
		border-right-style none
		border-bottom-style none
		&:first-child
			border-top-style none