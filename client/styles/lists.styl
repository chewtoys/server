//
// Labels
// --------------------------------------------------
// This also contains "list-group" styles.


// Items can be selected along with a sort order toggle
.list--sort-options
	padding-left 20px
	> li
		list-style-type none
		transition all $animation-shorter
		cursor pointer
		&.selected
			font-weight $font-weight-bold
			margin-left -20px
			&:before
				display inline-block
				width 20px
				font-family FontAwesome
				font-size 20px // icon
				font-style normal
				font-weight normal
				line-height 1
				-webkit-font-smoothing antialiased
				-moz-osx-font-smoothing grayscale
			&.desc:before
				content '\f107'
			&.asc:before
				content '\f106'



// List group within panel-body
.panel-body > .list-group
	margin -15px -15px
	.list-group-item
		padding 5px 15px
		border-radius 0
		border-left-style none
		border-right-style none
		border-bottom-style none
		&:first-child
			border-top-style none