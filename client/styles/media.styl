// Media objects
// --------------------------------------------------


// Add padding to body instead of media
.media-body
	padding-left 15px
.media > .pull-left
	margin-right 0

// toclean
.media-news
	hr
		margin-top 15px
		margin-left 15px
		margin-bottom 0
	.media-body
		& > label
			margin-left 15px
			a
				font-weight $font-weight-bold

// toclean
.media.media-mini
	margin-top 10px
	padding-bottom 5px
	&.last
		border none !important
	img.media-object
		width 40px
		height 40px

