// Media objects
// --------------------------------------------------


// Add padding to body instead of media
.media-body
	padding-left 15px
.media > .pull-left
	margin-right 0

// News flow on the home page
.media--news
	hr
		margin-top 15px
		margin-left 15px
		margin-bottom 0
	.img
		margin-left 30px
	.media-body
		> label
			margin-left 15px
			a
				font-weight $font-weight-bold

// Mini media panels in the side bar
.media--mini
	margin-top 10px
	padding-bottom 5px
	&.last
		border none !important
	h6
		margin-top -5px
	.media-body
		padding-left 10px
