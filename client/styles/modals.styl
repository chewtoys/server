// Modals
//


// :modals
.modal-dialog
	overflow hidden
	.modal-content
		border-radius 3px
		.modal-header
			border-radius 3px 3px 0 0
			padding 12px 20px 10px
	// Title margin before title when avatar is displayed
	.img--avatar-header + h1
		margin-left 100px
		
	.modal-body
		.indent
			margin-left 100px
			& + hr
				margin-top 20px
		.btn.btn-lg + .btn.btn-lg
			margin-left 20px

	.modal-footer
		border-radius 0 0 3px 3px
		margin-top 0

