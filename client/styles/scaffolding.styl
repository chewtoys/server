//
// Scaffolding
// --------------------------------------------------

// Body
body
	font-family $font-content
	font-weight $font-weight-normal
	font-size $font-size-normal
	-webkit-font-smoothing antialiased

// Links
a, .a
	cursor pointer
	transition all $animation-short
	&:hover
		text-decoration none
	&:focus
		text-decoration none
		outline none

// Divider
hr
	margin-top 10px
	border-width 2px
.hr--margin-small
	margin-bottom 10px

// Horizontal definition lists
dl.oneline
	width 100%
	dt
		float left
		font-weight $font-weight-normal
		text-transform uppercase
	dd
		text-align right

// Inline code
code
	font-size $font-size-code

// TODO change to footer element
// Footer
section.footer
	text-align center
	margin-top -20px
	margin-bottom 20px
	font-weight
	i.fa
		margin-right 10px
		font-size 20px // icon
	a
		transition all $animation-short


// Error page
.center-middle-errorpage
	position relative
	padding 120px 50px 0
	text-align center
	i.icon-vpdb-logo-o
		font-size 300px
	h1
		margin-top -10px
		margin-bottom 15px
		font-family $font-content
		font-weight $font-weight-thin
		font-size 140px
	a
		font-family $font-content
	p
		margin 0 0 30px