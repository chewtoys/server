//
// Scaffolding
// --------------------------------------------------

body
	font-family $font-content
	font-weight $font-weight-normal
	font-size $font-size-normal
	-webkit-font-smoothing antialiased
a
	cursor pointer
	transition all $animation-short
	&:hover
		text-decoration none
	&:focus
		text-decoration none
		outline none
hr
	margin-top 10px
	border-width 2px
