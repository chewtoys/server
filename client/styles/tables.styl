//
// Styleguide 4


// Tables
//
// Columns for the extended game list panel
//
// Markup:
// <table class="table {$modifiers}">
//   <thead>
//     <tr><th>#</th><th>Title</th><th>Wat</th></tr>
//   <tbody>
//     <tr><td>1</td><td>First Entry</td><td>Foo</td></tr>
//     <tr><td>2</td><td>Second Entry</td><td>Bar</td></tr>
//     <tr><td>3</td><td>Third Entry</td><td>Zeee</td></tr>
//   </tbody>
// </table>
//
// .table-striped     - Striped table
// .table--selectable - Selectable rows
//
// Styleguide 4.1
table.table

	tr > th
		font-weight $font-weight-normal

	tr > th, tr > td
		border none
		padding 3px 0
		&:first-child
			padding-left 10px
		&:last-child
			padding-right 10px
			text-align right
		&.name
			font-weight $font-weight-bold
		&.td-dlbtn
			width 50px

	&.table-striped tr
		& > td.nostripe
			padding-left 5px

	&.table--selectable tr
		& > td
			cursor pointer
			transition all $animation-shorter

	tr.inactive > td
		text-decoration line-through

// Padding is screwed up otherwise.
.table-wrapper
	margin-left 15px
	margin-right 15px
