// Typography
//
// Below are different headings used on VPDB.
//
// Styleguide 1.2


// Headings
//
// Your standard, everyday headings.
//
// . - Default styles
//
// Markup:
// <h1>Heading h1</h1>
// <h2>Heading h2</h2>
// <h3>Heading h3</h3>
// <h4>Heading h4</h4>
// <h5>Heading h5</h5>
// <h6>Heading h6</h6>
//
// Styleguide 1.2.1
h1
	font-family $font-header
	text-transform uppercase

h2, h5
	font-family $font-header
	text-transform uppercase

h1, h2, h5
	font-size $font-size-larger-alt
	font-weight $font-weight-normal-alt
	margin-bottom 10px
	margin-top 20px

h3
	font-size $font-size-largest
	font-family $font-header
	text-transform uppercase

h4
	font-family $font-content
	font-weight $font-weight-bold
	font-size $font-size-large
	text-transform uppercase

h4 .small
	font-size $font-size-normal


// Panel headings
// -------------------------
.panel__h-alpha // formerly: .panel h1
	margin-top 0
	font-size $font-size-largest
	font-family $font-content
	font-weight $font-weight-bold
	text-transform none

.panel__h-beta // formerly: .panel h3
	font-size $font-size-larger
	font-family $font-header
	font-weight $font-weight-normal-alt
	text-transform uppercase
	white-space nowrap
	overflow hidden
	text-overflow ellipsis

.panel__h-gamma // formerly: .panel-header > h1
	margin 10px auto
	font-family $font-content
	font-size $font-size-larger
	font-weight $font-weight-bold


// User links
user
	font-weight $font-weight-bold
	transition color animation-short
	cursor pointer
