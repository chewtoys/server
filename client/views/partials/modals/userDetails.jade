.theme-light
	.modal-header
		.img.img-avatar.img--avatar-header(img-bg="user.avatar")
		h1.h--no-margin.h--small {{ user.user }}
	.modal-body
		div.indent {{ user.followers | number }} followers, acknowledged {{ user.acknowledged | number }} times

		hr
		h4 Games Authored
		div.center-block list here
		h4 Games Contributed To
		div.center-block list here


	.modal-footer
		button.btn.btn-default.pull-left
			i.fa.fa-star.space-right
			| Follow
		button.btn.btn--secondary(ng-click="$close()") Close
