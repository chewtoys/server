server {

	listen 80;

	server_name staging.vpdb;

	location ~ ^/(css/global\.min\.css|js/global\.min\.js) {
		root /var/www/staging/shared/cache;
		access_log off;
		expires max;
	}

	location ~ ^/(fonts/|images/|css/|robots.txt|humans.txt|favicon.ico) {
		root /var/www/staging/current/client/static;
		access_log off;
		expires max;
	}

	location ~ ^/js/ {
		root /var/www/staging/current/client/code;
		rewrite ^/js/(.*)$ /$1 break;
		access_log off;
		expires max;
	}

	location ~ ^/styleguide {
		root /var/www/staging/current;
		try_files $uri /styleguide/index.html;
		access_log off;
		expires max;
	}

	location / {
		client_max_body_size 20M;
		proxy_redirect off;
		proxy_set_header X-Real-IP         $remote_addr;
		proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_set_header Host              $http_host;
		proxy_set_header X-NginX-Proxy     true;
		proxy_set_header Connection "";
		proxy_http_version 1.1;
		#proxy_cache one;
		#proxy_cache_key vpdb$request_uri$scheme;
		proxy_pass http://vpdb_staging_upstream;

		error_page 502 /502.html;
	}

	location /502.html {
		root /var/www/staging/shared/cache/html;
		access_log off;
		expires max;
    }
}