post:
  securedBy: [ jwt: { scopes: [ MEMBER ] } ]
  description: |
    Star a release.

    Note that this can only be done once per release. You can unstar a release
    using `DELETE` on the same URL.
  body:
    role/member:
      example: !include http/create-star-req.json
  responses:
    201:
      body:
        role/member:
          example: !include http/create-star-res-201.json
get:
  securedBy: [ jwt: { scopes: [ MEMBER ] } ]
  description: |
    Retrieve own star status of a release.

    Returns either the star date of the authenticated user of the given release, or
    `404` if the user hasn't starred that release.
  body:
    role/member:
      example: !include http/view-star-req.json
  responses:
    200:
      body:
        role/member:
          example: !include http/view-star-res-200.json
    404:
      body:
        role/member:
          example: !include http/view-star-res-404.json
delete:
  securedBy: [ jwt: { scopes: [ MEMBER ] } ]
  description: |
    Unstar a release.
  body:
    role/member:
      example: !include http/delete-star-req.json
  responses:
    204:
      body:
        role/member:
          example: !include http/delete-star-res-204.json